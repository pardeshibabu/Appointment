<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/CnfPoptxtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_red_dark"
        android:text="X"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CnfTitleTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to take appointment?"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_below="@+id/CnfPoptxtclose"/>
    <TextView
        android:id="@+id/CnfYesTextview"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Yes"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@android:color/background_light"
        android:background="@android:color/holo_green_dark"/>
    <TextView
        android:id="@+id/CnfAlterTextview"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Another slot"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_below="@+id/CnfYesTextview"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_light"
        android:background="@android:color/holo_red_dark"/>
</RelativeLayout>